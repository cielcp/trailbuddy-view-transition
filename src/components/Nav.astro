---
import { Image } from 'astro:assets'
import NavTrailFilter from './NavTrailFilter.astro'

import logo from '../assets/images/logo.png'

import bikeSvg from '../assets/svgs/bike.svg'
---

<nav
  class="flex items-center justify-between gap-6 bg-champagne bg-topography px-4 py-4 md:px-10 md:py-7"
>
  <a href="/" class="h-full shrink-0">
    <Image
      src={logo}
      alt="Trailbuddy"
      width="190"
      class="h-6 w-auto max-w-[190px] object-contain md:h-10"
    />
  </a>

  <NavTrailFilter
    options={[
      { label: 'hike', checked: true },
      { label: 'run' },
      { label: 'bike' },
    ]}
  />

  <button
    type="button"
    class="h-8 w-[90px] rounded-xl bg-red-orange text-sm uppercase leading-none text-white transition-colors hover:bg-red-orange-hover active:bg-red-orange-active md:h-10 md:w-[120px] md:rounded-2xl md:text-base"
    >Login</button
  >
</nav>
